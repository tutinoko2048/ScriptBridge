{
  "include": ["src"],
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2021",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "build",
    "noUncheckedIndexedAccess": true,
  }
}