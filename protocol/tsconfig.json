{
  "include": ["src"],
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2021",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "noUncheckedIndexedAccess": true
  }
}